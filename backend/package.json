{
  "name": "split-bill-backend",
  "version": "0.1.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "predev": "npm run prisma:generate && npm run prisma:dbpush",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:dbpush": "prisma db push",
    "migrate:dev": "prisma migrate dev --name init",
    "migrate:deploy": "prisma migrate deploy"
  },

  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "@prisma/client": "^5.0.0",
    "@aws-sdk/client-s3": "^3.329.0",
    "@aws-sdk/s3-request-presigner": "^3.329.0",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "prisma": "^5.0.0",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "@types/express": "^4.17.17",
    "@types/uuid": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.2"
  }
}
